<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyUserStory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_600</item>
        <item name="colorPrimaryVariant">@color/black_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noAnimTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black_900</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextAppearance">@style/header_font_bold</item>
        <item name="titleTextColor">@color/light_blue_50</item>
    </style>

    <style name="layout">
        <item name="android:background">@color/black_900</item>
    </style>

    <style name="card_item">
        <item name="android:background">@color/black_600</item>
    </style>

    <style name="button_navi" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_navi</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/content_font_small</item>
        <item name="android:textColor">@color/navi_100</item>
    </style>
    <style name="button_yellow" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_yellow</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/content_font_small</item>
        <item name="android:textColor">@color/yellow_100</item>
    </style>
    <style name="button_white" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/content_font_small</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="content_font_small" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="content_font_small_gray" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_300</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="content_font_medium" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="header_font" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_font_bold" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>