<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition_id"
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="250dp"
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/btn_login"
            motion:layout_constraintEnd_toEndOf="@+id/ed_password_login"
            android:layout_width="0dp"
            android:layout_height="35dp"
            motion:layout_constraintTop_toBottomOf="@+id/ed_password_login"
            motion:layout_constraintStart_toStartOf="@+id/ed_password_login"
            android:layout_marginTop="50dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_message"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.284"
            motion:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="300dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_message"
            android:id="@+id/tv_email"
            android:layout_marginTop="40dp"
            motion:layout_constraintEnd_toEndOf="@+id/tv_message"
            motion:layout_constraintStart_toStartOf="@+id/tv_message"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.618"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="280dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_email"
            android:id="@+id/ed_email_login"
            android:layout_marginTop="3dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/ed_email_login"
            android:id="@+id/tv_password"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            motion:layout_constraintHorizontal_bias="0.226" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/ed_email_login"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="@+id/ed_email_login"
            android:layout_width="280dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_password"
            android:id="@+id/ed_password_login"
            android:layout_marginTop="3dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/logo"
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:id="@+id/btn_login"
            motion:layout_constraintEnd_toEndOf="@+id/ed_password_login"
            android:layout_width="0dp"
            android:layout_height="35dp"
            motion:layout_constraintTop_toBottomOf="@id/ed_password_login"
            motion:layout_constraintStart_toStartOf="@+id/ed_password_login"
            android:layout_marginTop="35dp"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/logo"
            android:id="@+id/tv_message"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toBottomOf="@+id/logo" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="280dp"
            android:id="@+id/ed_email_login"
            motion:layout_constraintTop_toBottomOf="@+id/tv_email"
            android:layout_marginTop="3dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.503" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_email"
            motion:layout_constraintTop_toBottomOf="@+id/tv_message"
            android:layout_marginTop="40dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.173" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_password"
            motion:layout_constraintTop_toBottomOf="@+id/ed_email_login"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.184"
            android:layout_marginTop="5dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/ed_email_login"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="@+id/ed_email_login"
            android:layout_width="280dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_password"
            android:id="@+id/ed_password_login"
            android:layout_marginTop="3dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="411dp"
            android:id="@+id/imageView" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/btn_guest"
            android:layout_width="0dp"
            android:layout_height="35dp"
            motion:layout_constraintTop_toBottomOf="@+id/btn_guest"
            motion:layout_constraintStart_toStartOf="@+id/btn_guest"
            android:layout_marginTop="50dp"
            android:id="@+id/btn_register" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/btn_guest"
            android:id="@+id/tv_not_account"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/progress_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>